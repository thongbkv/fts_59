<div class="row">
  <div class="col-md-10 col-offset-2">
    <h2><%= t "controller.subject.list_subject" %></h2>
    <%= link_to t("feature.subjects.create"), new_admin_subject_path %>
    <table class="table table-striped table-hover">
      <thead>
        <th><%= t "feature.subjects.name" %></th>
        <th><%= t "feature.subjects.question_number" %></th>
        <th><%= t "feature.subjects.duration" %></th>
        <th><%= t "static_pages.questions.update" %></th>
        <th><%= t "static_pages.questions.delete" %></th>
      </thead>
      <tbody>
        <% @subjects.each do |subject| %>
          <tr>
            <td><%= subject.name %></td>
            <td><%= subject.question_number %></td>
            <td><%= subject.duration %></td>
            <td>
              <%= link_to [:edit,:admin, subject],
                class: "btn btn-primary btn-xs" do %>
                <span class="glyphicon glyphicon-eye-open"></span>
                <%= t "static_pages.questions.update" %>
              <% end %>
            </td>
            <td>
              <%= link_to [:admin, subject], method: :delete,
                data: {confirm: t("static_pages.questions.confirm")},
                class: "btn btn-primary btn-xs" do %>
                <span class="glyphicon glyphicon-eye-open"></span>
                <%= t "static_pages.questions.delete" %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
