<div class="row">
  <div class="col-md-6">
    <%= f.label :option %>
    <%= f.text_field :content, placeholder: t("layouts.title"), class: " form-control" %>
  </div>
  <div class="col-md-6 col-md-offset-1 ">
    <%= f.check_box :is_correct, class: "form-control is_correct" %>
  </div>
   <div class="input-field col s1">
    <i class="material-icons">
      <%= f.hidden_field :_destroy %>
      <%= link_to t("shared.delete"), "#", class: "remove_fields choose-danger" %>
    </i>
  </div>
</div>
